<section class="flex justify-center w-full">
    <section>
        <h1 class="text-3xl font-bold text-blue-900 text-center p-5 my-5 border-b-2 border-b-yellow-400 uppercase">
            Partnered tour companies
        </h1>
        <div class="flex justify-end">
            <a href="/add-company" class="py-2 px-4 my-3 border-cyan-600 text-cyan-600 font-bold border-4 block hover:bg-cyan-600 hover:text-white">
                Add New Company
            </a>
        </div>
        <table class="border p-3 text-center">
            <thead class="bg-cyan-600 text-white">
              <th class="px-5 py-3 border">Company ID</th>
              <th class="px-5 py-3 border">Tour Company</th>
              <th class="px-5 py-3 border">Contact Number</th>
              <th class="px-5 py-3 border">Email Address</th>
              <th class="px-5 py-3 border">Actions</th>
            </thead>
      
            <tbody>
              <% companies.reverse().forEach(company => { %>
              <tr class="hover:shadow-md hover:shadow-cyan-400">
                <td class="px-5 py-3 border"><%= company.id %></td>
                <td class="px-5 py-3 border"><%= company.company_nm %></td>
                <td class="px-5 py-3 border"><%= company.phone_num %></td>
                <td class="px-5 py-3 border"><%= company.email %> </td>
    
                <td class="px-5 py-3 border flex justify-evenly gap-6 text-xl">
      
                  <div class="hover:text-cyan-500 text-sm" title="Edit Project">
                      <a href="/edit-company/<%= company.id %> ">
                          <i class="fa-solid fa-pen"></i> Edit
                      </a>
                    </div>
      
                  <div class="hover:text-orange-500 text-sm" title="Delete Project" onclick="alert('Deleted Successfully')">
                    <a href="/delete-company/<%= company.id %> ">
                      <i class="fa-solid fa-trash"></i> Delete
                    </a>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>

          <div class="p-5 bg-[#EEE] font-thin text-center my-10">
            <p>Copyright @ Dolphin Cove JA 2022</p>
          </div>
    </section>
</section>