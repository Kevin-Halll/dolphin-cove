<section class="bg-[#EEE] py-8 w-full">
    <div class="w-[80%] m-auto" id="programs">
        <h1 class="text-5xl font-bold text-blue-900 text-center p-5 border-b-2 border-b-yellow-400">
            DISCOVER OUR SWIM WITH DOLPHINS PROGRAMS
        </h1>
    
        <!-- /////////////////////////////////////////////////// -->
        <div class="flex gap-4 justify-center my-5 py-5">
           <% events.forEach( event => { %>
           <a href="program/<%= event.id %>">
            <div class="w-[400px]">
                <img src="<%= event.cover %> " alt="" class="w-full">
                <div class="bg bg-gradient-to-b from-cyan-500 to-blue-400 text-center text-white">
                    <p class="capitalize text-xl font-bold pt-2"><%= event.title %> </p>
                    <p class="p-2 font-medium"><%= event.description %> </p>
                </div>
            </div>
           </a>
            <% }) %>  
        </div>
        <!-- ////////////////////////////////////////////////////// -->
    </div>
</section>
